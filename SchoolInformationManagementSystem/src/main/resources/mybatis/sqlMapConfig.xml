	 <!-- 配置Mapper 备注:由于使用Spring整合mybtais的整合包进行mapper扫描,这里不需要配置了 必须遵循:mapper.xml和mapper.java文件同名且在同一目录下 
		<mappers></mappers> -->
		
	<mappers>  
<!--         <mapper resource="User.xml" />   -->
    <!-- <mapper resource="mapper/UserMapper.xml" /> -->  
  
        <!-- 批量加载映射文件 -->  
        <package name="classpath*:mybatis/mybatis-mapper/*Mapper.xml" />  
    </mappers>  
</configuration>
